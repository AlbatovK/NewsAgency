<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.NewsAgency" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/grey_light</item>
        <item name="colorPrimaryVariant">@color/grey_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/grey_white</item>
        <item name="colorSecondaryVariant">@color/grey_white</item>
        <item name="colorOnSecondary">@color/grey_light</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="splash_custom_theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/grey_white</item>
        <item name="colorSecondaryVariant">@color/grey_white</item>
        <item name="colorOnSecondary">@color/grey_light</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.NewsAgency.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NewsAgent.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NewsAgent.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>